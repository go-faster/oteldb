{
    writers={
        stderr={
            type=stderr;
            format=json;
        };
        debug={
            type=file;
            format="plain_text";
            "file_name"="debug.log";
        };
        error={
            type=file;
            format=yson;
            "file_name"="error.log";
        };
        trace={
            type=file;
            format=json;
            "file_name"="trace.log";
        };
    };
    rules=[
        {
            "min_level"=debug;
            writers=[
                debug;
            ];
        };
        {
            "min_level"=info;
            writers=[
                stderr;
            ];
        };
        {
            "min_level"=error;
            writers=[
                error;
            ];
        };
        {
            "min_level"=trace;
            writers=[
                trace;
            ];
        };
    ];
}